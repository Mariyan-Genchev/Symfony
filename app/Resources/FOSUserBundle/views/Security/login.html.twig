{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="container">
    <div class="row col-md-offset-2 col-lg-offset-3">
        <div class="login_form col-md-10 col-lg-8">
            <h2 class="login-title">Login</h2>

			<form action="{{ path("fos_user_security_check") }}" method="post">
			    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
   					<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />               
                </div>
                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
   					<input class="form-control" type="password" id="password" name="_password" required="required" />                   
                </div>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    				<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>                  
                </div>

                <div class="login-footer">
                    <input class="btn btn-success col-md-3 pull-right" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
            </form>
            <a class="btn btn-primary pull-left" href="/">Back</a>
        </div>
    </div>
</div>

{% endblock fos_user_content %}
