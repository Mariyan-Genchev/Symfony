{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<div class="row col-md-offset-2 col-lg-offset-3">
			<div class="note_form col-md-10 col-lg-8">
				<h2 class="note-title">New note</h2>

				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.title) }}
					{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.title) }}
				</div>
				<div class="form-group">
					{{ form_label(form.note) }}
					{{ form_widget(form.note, {'attr': {'class': 'form-control', 'rows': '15'}}) }}
					{{ form_errors(form.note) }}
				</div>
				<div>
					<input type="submit" value="Create" class="btn btn-success col-md-3 pull-right"/>
				</div>
				{{ form_end(form) }}
				
				<a class="btn btn-primary pull-left" href="/list">Back</a>
			</div>
		</div>
	</div>
{% endblock %}